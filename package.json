{
  "name": "devtools-log-popover",
  "version": "0.2.0",
  "description": "A floating dev tools log popover for React (web) and React Native",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JakeDawkins/devtools-log-popover"
  },
  "homepage": "https://github.com/JakeDawkins/devtools-log-popover",
  "keywords": [
    "react",
    "react-native",
    "devtools",
    "debug",
    "logger",
    "popover",
    "overlay",
    "development"
  ],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "react-native": "./dist/index.native.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./dist/index.native.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "react-native": ">=0.72"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18.3.7",
    "@types/react-native": "^0.72",
    "tsup": "^8",
    "typescript": "^5"
  },
  "overrides": {
    "@types/react-native": {
      "@types/react": "*"
    }
  }
}
